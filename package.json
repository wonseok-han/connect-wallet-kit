{
  "name": "connect-wallet-kit",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:appkit": "pnpm --filter=hedera-appkit run dev",
    "dev:snap": "pnpm --filter=hedera-metamask-snap run dev",
    "dev:provider": "pnpm --filter=hedera-universal-provider run dev",
    "dev:web": "pnpm --filter=guide-web run dev"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22"
  }
}
